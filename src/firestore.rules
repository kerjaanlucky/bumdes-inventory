rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUser(userId) {
      return get(/databases/$(database)/documents/users/$(userId));
    }
    
    function isUserRole(userId, role) {
        return exists(/databases/$(database)/documents/users/$(userId)) && getUser(userId).data.role == role;
    }

    function isGlobalAdmin() {
        return isSignedIn() && isUserRole(request.auth.uid, 'admin');
    }
    
    function requestingUser() {
        return getUser(request.auth.uid);
    }
    
    function isAssignedToBranch(branchId) {
        return requestingUser().data.branchId == branchId;
    }

    // Admins can manage branches
    match /branches/{branchId} {
      allow read: if isSignedIn();
      allow write: if isGlobalAdmin();
    }

    // Admins can manage any user. Users can read their own profile.
    match /users/{userId} {
      allow get: if isSignedIn() && (isOwner(userId) || isGlobalAdmin());
      allow list: if isGlobalAdmin();
      allow create: if isGlobalAdmin();
      allow update: if isSignedIn() && (isOwner(userId) || isGlobalAdmin());
      allow delete: if isGlobalAdmin();
    }
    
    // Rules for branch-isolated master data
    match /{collection}/{docId} where collection in ['products', 'categories', 'units', 'customers', 'suppliers', 'purchases', 'sales', 'stocks'] {
        // Read: Users can only read data from their own branch. Admins can read anything.
        allow read: if isSignedIn() && (isAssignedToBranch(resource.data.branchId) || isGlobalAdmin());
        
        // Create: Users can only create data for their own branch.
        allow create: if isSignedIn() && isAssignedToBranch(request.resource.data.branchId);

        // Update/Delete: Only admins can update/delete data. They can only affect docs in their own branch unless they are global admins.
        allow update, delete: if isSignedIn() && (isGlobalAdmin() || (isUserRole(request.auth.uid, 'admin') && isAssignedToBranch(resource.data.branchId)));
    }
  }
}
