
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUser(userId) {
      return get(/databases/$(database)/documents/users/$(userId));
    }
    
    function isUserRole(userId, role) {
        return exists(/databases/$(database)/documents/users/$(userId)) && getUser(userId).data.role == role;
    }

    function isGlobalAdmin() {
        return isSignedIn() && isUserRole(request.auth.uid, 'admin');
    }
    
    function requestingUser() {
        return getUser(request.auth.uid);
    }
    
    function isAssignedToBranch(branchId) {
        return requestingUser().data.branchId == branchId;
    }

    // Admins can manage branches
    match /branches/{branchId} {
      allow read: if isSignedIn();
      // Allow user to update their own branch, and admin to update any branch
      allow update: if isSignedIn() && (isGlobalAdmin() || isAssignedToBranch(branchId));
      allow create, delete: if isGlobalAdmin();
    }

    // Admins can manage any user. Users can read their own profile.
    match /users/{userId} {
      allow get: if isSignedIn() && (isOwner(userId) || isGlobalAdmin());
      allow list: if isGlobalAdmin();
      allow create: if isGlobalAdmin();
      allow update: if isSignedIn() && (isOwner(userId) || isGlobalAdmin());
      allow delete: if isGlobalAdmin();
    }
    
    function canAccessBranchData(branchId) {
      return isAssignedToBranch(branchId) || isGlobalAdmin();
    }
    
    function canWriteBranchData(branchId) {
      return isGlobalAdmin() || isAssignedToBranch(branchId);
    }

    // Rules for branch-isolated master data
    match /products/{docId} {
        allow read: if isSignedIn() && canAccessBranchData(resource.data.branchId);
        allow create: if isSignedIn() && isAssignedToBranch(request.resource.data.branchId);
        allow update, delete: if isSignedIn() && canWriteBranchData(resource.data.branchId);
    }
    
    match /categories/{docId} {
        allow read: if isSignedIn() && canAccessBranchData(resource.data.branchId);
        allow create: if isSignedIn() && isAssignedToBranch(request.resource.data.branchId);
        allow update, delete: if isSignedIn() && canWriteBranchData(resource.data.branchId);
    }

    match /units/{docId} {
        allow read: if isSignedIn() && canAccessBranchData(resource.data.branchId);
        allow create: if isSignedIn() && isAssignedToBranch(request.resource.data.branchId);
        allow update, delete: if isSignedIn() && canWriteBranchData(resource.data.branchId);
    }

    match /customers/{docId} {
        allow read: if isSignedIn() && canAccessBranchData(resource.data.branchId);
        allow create: if isSignedIn() && isAssignedToBranch(request.resource.data.branchId);
        allow update, delete: if isSignedIn() && canWriteBranchData(resource.data.branchId);
    }

    match /suppliers/{docId} {
        allow read: if isSignedIn() && canAccessBranchData(resource.data.branchId);
        allow create: if isSignedIn() && isAssignedToBranch(request.resource.data.branchId);
        allow update, delete: if isSignedIn() && canWriteBranchData(resource.data.branchId);
    }
    
    match /purchases/{docId} {
        allow read: if isSignedIn() && canAccessBranchData(resource.data.branchId);
        allow create: if isSignedIn() && isAssignedToBranch(request.resource.data.branchId);
        allow update, delete: if isSignedIn() && canWriteBranchData(resource.data.branchId);
    }

    match /sales/{docId} {
        allow read: if isSignedIn() && canAccessBranchData(resource.data.branchId);
        allow create: if isSignedIn() && isAssignedToBranch(request.resource.data.branchId);
        allow update, delete: if isSignedIn() && canWriteBranchData(resource.data.branchId);
    }

    match /stocks/{docId} {
        allow read: if isSignedIn() && canAccessBranchData(resource.data.branchId);
        allow create: if isSignedIn() && isAssignedToBranch(request.resource.data.branchId);
        allow update, delete: if isSignedIn() && canWriteBranchData(resource.data.branchId);
    }

     match /expenses/{docId} {
        allow read: if isSignedIn() && canAccessBranchData(resource.data.branchId);
        allow create: if isSignedIn() && isAssignedToBranch(request.resource.data.branchId);
        allow update, delete: if isSignedIn() && canWriteBranchData(resource.data.branchId);
    }

     match /expenseCategories/{docId} {
        allow read: if isSignedIn() && canAccessBranchData(resource.data.branchId);
        allow create: if isSignedIn() && isAssignedToBranch(request.resource.data.branchId);
        allow update, delete: if isSignedIn() && canWriteBranchData(resource.data.branchId);
    }
  }
}
